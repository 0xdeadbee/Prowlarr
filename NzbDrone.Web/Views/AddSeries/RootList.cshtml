@model IEnumerable<String>
@if (!Model.Any())
{
    <div class="actionButton delete">
        <span>You have no root folders added.</span>
    </div>
}
@foreach (var root in Model)
{
    <div class="actionButton delete">
        <img src="../../Content/Images/x_16.png" alt="delete" id='@root'/>
        <span>@root</span>
    </div>
}
